{
  "name": "alanchatfield-net",
  "description": "A Ghost theme which provides great typography, responsive design, author details, semantic markup and more. Very loosely based on the Incorporated theme by James Ramsay, which is itself for the most part a port of Jekyll Incorporated by Kippt, Inc.",
  "version": "3.6.7",
  "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
  },
  "license": "MIT",
  "scripts": {
      "dev": "gulp",
      "zip": "gulp zip"
  },
  "author": {
    "name": "Alan Chatfield",
    "email": "contact@alanchatfield.net"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Business Blogs"
    ]
  },
  "keywords": [
    "ghost",
	"ghost-theme",
    "theme"
  ],
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
          "xs": {
              "width": 340
          },
          "s": {
              "width": 475
          },
          "m": {
              "width": 750
          },
          "l": {
              "width": 1200
          },
          "xl": {
              "width": 2000
          }
    },
    "custom": {
      "banner_alignment": {
          "type": "select",
          "options": ["center-align", "top-align", "bottom-align"],
          "default": "center-align",
          "group": "post"
      },
      "fediverse": {
          "type": "text",
          "group": "social"
      }
    }
  }
}
