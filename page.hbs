{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! TODO: Add support for per article cover image }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<header class="blog-cover" {{#if feature_image}}style="background-image: url({{feature_image}})"{{else}}{{#if @site.cover_image}}style="background-image: url({{@site.cover_image}})"{{/if}}{{/if}}>
    <section>
        <div class="container">
            <h1>{{{title}}}</h1>
            <h3>{{{excerpt}}}</h3>
        </div>
    </section>
</header>

{{! Everything below outputs content of the the post which has been published }}
<main class="container">
    <article>
        <header>
            <h2 class="title xs-show">{{{title}}}</h2>				
        </header>    
        {{content}}          
    </article>
</main>
{{/post}}
