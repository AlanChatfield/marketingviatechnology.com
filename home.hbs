{{!< default}}

	<header class="blog-cover index-cover" style="background-image: url(/assets/images/mountain-road-1556177_rgb-1.jpg);background-position:bottom 20% center">
		<a href="/blog/">	
			<section>	
				<div class="container">
					<h1>Marketing via Technology</h1>
					<h3>Views from the intersection of digital marketing and enterprise technology</h3>
				</div>				
			</section>
		</a>			
	</header>
	{{#get "posts" filter="tag:-[politics,sport,asides],featured:true" include="tags" limit="1" as |posts|}}	
		{{#foreach posts}}	
<main class="{{primary_tag.slug}}">
		{{/foreach}}	
	{{/get}}	
	<article class="container grid long">	
